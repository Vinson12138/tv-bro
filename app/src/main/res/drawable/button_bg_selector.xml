<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_focused="false">
        <shape android:layout_width="match_parent" android:layout_height="match_parent" android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/button_corner" />
            <stroke android:width="2dp" android:color="@color/button_corner" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/button_corner" />
            <stroke android:color="#33add6" android:width="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/button_background_disabled" />
            <stroke android:color="@color/button_corner" android:width="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/button_background_disabled" />
            <stroke android:color="#38CCFE" android:width="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/button_background_pressed" />
            <stroke android:color="@color/button_corner" android:width="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/button_background_focused" />
            <stroke android:color="#38CCFE" android:width="2dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@color/button_background" />
            <stroke android:color="@color/button_corner" android:width="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>